<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgottenPassword"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:background="@drawable/home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:id="@+id/icon_left"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/retour"
            android:background="@drawable/elypse"
            android:contentDescription="Retour"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Mot de passe oublié"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Entrez votre adresse e-mail pour \nréinitialiser votre mot de passe"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="Nous vous enverrons un code de vérification par e-mail"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/emailField"
                android:layout_width="376dp"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rectangle_8"
                android:fontFamily="@font/poppins_medium"
                android:hint="abc@gmail.com"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingLeft="30dp"
                android:textSize="16sp"

                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/buttonGetOTP"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#1877F2"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Rénitialiser"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textResend"
                    android:layout_width="225dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_light"
                    android:text=" Vous n'avez pas reçu l'Email ?"
                    android:textColor="#949292"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resend"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text=" Renvoyer "
                    android:textAlignment="textStart"
                    android:textColor="#1877F2"
                    android:textSize="14sp"

                    android:textStyle="bold" />


            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
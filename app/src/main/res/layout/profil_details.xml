<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/buttonReturn"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/angle_petit_gauche"
                android:background="@drawable/elypse"
                android:contentDescription="Retour" />

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/profile"
                android:textSize="28sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#1B1C1E"
                android:layout_margin="10dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/buttonEdit"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:contentDescription="Modifier"
                android:focusable="true"
                android:src="@drawable/editer_36"
                android:background="@drawable/elypse"
                app:tint="#333"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/femme"
                android:contentDescription="Avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/prenomprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Loubna"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="#000"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Nom"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:hint="Enter First Name"
                android:text="El houchi"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="#A4A3A3"
                android:focusable="false"
                android:enabled="false"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Prénom"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:hint="Enter Last Name"
                android:text="Loubna"
                android:textColor="#A4A3A3"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:focusable="false"
                android:enabled="false"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Emplacement"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:inputType="none" />

            <EditText
                android:id="@+id/editTextEmplacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:hint="Enter Location"
                android:text="Oujda, Maroc"
                android:textColor="#A4A3A3"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:focusable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Numéro de téléphone"
                android:textSize="14sp"
                android:focusable="false"
                android:enabled="false"
                android:layout_marginBottom="8dp"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:hint="Enter Mobile Number"
                android:text="+212634678923"
                android:textColor="#A4A3A3"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:inputType="phone"
                android:layout_marginBottom="16dp"
                android:focusable="false"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="E-mail"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:hint="Entrez votre email"
                android:text="example@gmail.com"
                android:textColor="#A4A3A3"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:focusable="false"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

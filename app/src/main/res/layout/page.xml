<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Premier écran -->
    <LinearLayout
        android:id="@+id/screen1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/image1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="La vie est courte, le monde est vaste,"
            android:textSize="25sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="découvrez-le"
            android:textColor="#FF7029"
            android:textSize="15sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Explorez de nouveaux horizons, trouvez votre aventure parfaite avec nous"
            android:textSize="15sp" />
    </LinearLayout>



    <!-- Deuxième écran -->
    <LinearLayout
        android:id="@+id/screen2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="426dp"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/image2" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Il y a un monde   immense à découvrir, "
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="partez à l’aventure"
            android:textColor="#FF7029"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Réservez un café cosy, un restaurant gastronomique ou un hôtel de charme..."
            android:textSize="15sp" />


    </LinearLayout>

    <!-- Troisième écran -->
    <LinearLayout
        android:id="@+id/screen3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/image3" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Les voyages ne sont pas seulement un déplacement,"
            android:textSize="25sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="49dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="   ils transforment"
            android:textColor="#FF7029"
            android:textSize="15sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Lancez votre voyage dès maintenant et explorez..."
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="155dp">

        <!-- Barre de progression inactive -->
        <View
            android:id="@+id/progress1"
            android:layout_width="5dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/progress_active" />

        <!-- Barre de progression active (bleue) -->
        <View
            android:id="@+id/progress2"
            android:layout_width="5dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/progress_inactive" />

        <!-- Barre de progression inactive -->
        <View
            android:id="@+id/progress3"
            android:layout_width="5dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/progress_inactive" />
    </LinearLayout>


    <!-- Boutons de navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#0D6EFD"
            android:fontFamily="@font/poppins_bold"
            android:text="Commencer" />
    </LinearLayout>
</LinearLayout>